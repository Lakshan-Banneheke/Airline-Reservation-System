<%- include('_staff_header',{user}) %>

 <div class="container py-4">
     <div class="card  rounded shadow-lg">
        <div class="row card-body">
            <div class="col-md-6 col-sm-12 text-center">
                <img src="https://image.freepik.com/free-vector/secure-login-concept-illustration_114360-4582.jpg" alt="Login"
                    width="80%" />
                <br>
            </div>
            <div class="col-md-6 col-sm-12 align-self-center">
            
                <h3 class="text-center">Staff Log In</h3>
                <form method="POST" action="/staff/login">
                    <% if (error) {%>
                        <div class="alert alert-danger text-center" role="alert">
                            <strong><%=error%></strong>
                        </div>
                    <% } %>
                    <% if (success) {%>
                        <div class="alert alert-success text-center" role="alert">
                            <%=success%>
                        </div>
                    <% } %>
                    <div class="form-group">
                        <label for="empId">Employee ID <small class="text-secondary"> (Bxxxxx) </small></label>
                        <input type="empId" class="form-control" id="empId" name="empId" placeholder="Enter Your Employee ID" required value="<%=empId%>" maxlength="6">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter Your Password" required >
                    </div>
    
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
            
        </div>

     </div>

 </div>

<%- include('_staff_footer') %>